<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>io.github.acevif.restart-macbook-touch-bar-server</string>
    <key>ProgramArguments</key>
    <array>
        <string>/usr/local/bin/restart_touchbarserver</string>
    </array>
    <key>RunAtLoad</key>
    <true/>
    <key>StartCalendarInterval</key>
    <dict>
        <key>Hour</key>
        <integer>1</integer>
        <key>Minute</key>
        <integer>0</integer>
    </dict>
    <key>UserName</key>
    <string>root</string>
    <key>StandardErrorPath</key>
    <string>/var/log/restart_touchbarserver.log</string>
    <key>StandardOutPath</key>
    <string>/var/log/restart_touchbarserver.log</string>
</dict>
</plist>
